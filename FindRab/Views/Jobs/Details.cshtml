@model FindRab.ViewModels.VacancyViewModel

@{
    ViewData["Title"] = "Vacancy Details";
}

<h1>Vacancy Details</h1>

<div>
    <h4>Vacancy</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Education)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Education)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
        <dt class="col-sm-2">
            Contact
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone) | @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Applications
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationCount)
        </dd>
    </dl>
</div>

<form asp-action="Apply" asp-controller="Jobs" method="post">
    <input type="hidden" name="vacancyId" value="@Model.VacancyId" />
    <button type="submit" class="btn btn-primary">Apply</button>
</form>

@if (ViewBag.Phone != null && ViewBag.Email != null)
{
    <div id="contactInfo">
        <p>Phone: @ViewBag.Phone</p>
        <p>Email: @ViewBag.Email</p>
    </div>
}

<div>
    @{
        var userRole = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
        var returnUrl = userRole == "1" ? Url.Action("Index", "AdminView") : Url.Action("Index", "Menu");
    }

    <a href="@returnUrl" class="btn btn-secondary">Return to Home</a>
</div>
