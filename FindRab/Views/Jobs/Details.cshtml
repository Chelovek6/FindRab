@model FindRab.ViewModels.VacancyViewModel

@{
    ViewData["Title"] = "Vacancy Details";
}

<h1>Vacancy Details</h1>

<div>
    <h4>Vacancy</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Education)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Education)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
        <dt class="col-sm-2">
            Contact
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone) | @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Applications
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationCount)
        </dd>
    </dl>
</div>
<div>
    <button id="applyButton" class="btn btn-primary" data-vacancy-id="@Model.VacancyId">Apply</button>
    <div id="contactInfo" style="display: none;">
        <p>Phone: <span id="contactPhone"></span></p>
        <p>Email: <span id="contactEmail"></span></p>
    </div>
    <div>
        @{
            var userRole = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
            var returnUrl = userRole == "1" ? Url.Action("Index", "AdminView") : Url.Action("Index", "Menu");
        }

        <a href="@returnUrl" class="btn btn-secondary">Return to Home</a>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#applyButton').click(function () {
                var vacancyId = $(this).data('vacancy-id');
                $.ajax({
                    url: '@Url.Action("Apply", "Jobs")',
                    type: 'POST',
                    data: { vacancyId: vacancyId },
                    success: function (data) {
                        $('#contactPhone').text(data.phone);
                        $('#contactEmail').text(data.email);
                        $('#contactInfo').show();
                    },
                    error: function () {
                        alert('Error while applying');
                    }
                });
            });
        });
    </script>
}
