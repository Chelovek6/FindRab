@model FindRab.ViewModels.RegisterViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Регистрация</title>
</head>
<body>
    <div class="register-container">
        <h2>Регистрация</h2>
        <form asp-action="Register" method="post">
            <div>
                <label asp-for="Username">Логин:</label>
                <input asp-for="Username" />
                <span class="validation-message" asp-validation-for="Username"></span>
            </div>
            <div>
                <label asp-for="Password">Пароль:</label>
                <input asp-for="Password" type="password" />
                <span class="validation-message" asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword">Повторите пароль:</label>
                <input asp-for="ConfirmPassword" type="password" />
                <span class="validation-message" asp-validation-for="ConfirmPassword"></span>
            </div>
            <button type="submit">Зарегистрироваться</button>
        </form>
    </div>
    <a href="@Url.Action("Login", "Account")">Авторизоваться</a></p>
</body>
</html>